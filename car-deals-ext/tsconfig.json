{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "DOM",
            "ES2020"
        ],
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "skipLibCheck": true,
        "rootDir": "src",
        "outDir": "dist",
        "allowJs": false,
        "sourceMap": true,
        "isolatedModules": true,
        "noEmitOnError": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}